<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/attribute_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_attribute_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_PD_POP_margin"
            android:layout_marginRight="@dimen/btn_PD_POP_margin"
            android:layout_marginTop="@dimen/btn_PD_POP_margin"
            android:background="@drawable/portrait_rounded_rectangle_btn"
            android:text="@string/btn_student"
            android:textColor="#00b3b3"
            android:textSize="@dimen/btn_PD_POP_textsize" />

        <Button
            android:id="@+id/btn_attribute_on_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_PD_POP_margin"
            android:layout_marginRight="@dimen/btn_PD_POP_margin"
            android:layout_marginTop="@dimen/btn_PD_POP_margintop"
            android:background="@drawable/portrait_rounded_rectangle_btn"
            android:text="@string/btn_on_job"
            android:textColor="#00b3b3"
            android:textSize="@dimen/btn_PD_POP_textsize" />

        <Button
            android:id="@+id/btn_attribute_retire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btn_PD_POP_marginbottom"
            android:layout_marginLeft="@dimen/btn_PD_POP_margin"
            android:layout_marginRight="@dimen/btn_PD_POP_margin"
            android:layout_marginTop="@dimen/btn_PD_POP_margintop"
            android:background="@drawable/portrait_rounded_rectangle_btn"
            android:text="@string/btn_retire"
            android:textColor="#00b3b3"
            android:textSize="@dimen/btn_PD_POP_textsize" />
    </LinearLayout>
</RelativeLayout>