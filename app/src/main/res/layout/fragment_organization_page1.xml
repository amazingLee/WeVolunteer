<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfdfe"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_organization_addressName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="单位地址："
                android:textColor="@color/colorDarkCyan"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_organization_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="宁波市海曙区柳丁街93号市青少年宫二楼"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfdfe"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_organization_chargeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="联系人："
                android:textColor="@color/colorDarkCyan"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_organization_charge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="丁键"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfdfe"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_organization_phoneName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="联系电话："
                android:textColor="@color/colorDarkCyan"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_organization_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="15728006904"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfdfe"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_organization_honourName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="组织荣耀："
                android:textColor="@color/colorDarkCyan"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_organization_honour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="宁波市十佳志愿者组织"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfdfe"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_organization_createName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="成立时间："
                android:textColor="@color/colorDarkCyan"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_organization_create"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="2016-8"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfdfe"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_organization_serverName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="服务领域："
                android:textColor="@color/colorDarkCyan"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_organization_server"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/project_detail_marginTB"
                android:layout_marginEnd="@dimen/project_detail_marginLR"
                android:layout_marginLeft="@dimen/project_detail_marginLR"
                android:layout_marginRight="@dimen/project_detail_marginLR"
                android:layout_marginStart="@dimen/project_detail_marginLR"
                android:layout_marginTop="@dimen/project_detail_marginTB"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="赛会服务"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>

        <RelativeLayout
            android:id="@+id/relative_organization_detailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfdfe"
            android:paddingBottom="@dimen/project_detail_marginTB"
            android:paddingEnd="@dimen/project_detail_marginLR"
            android:paddingLeft="@dimen/project_detail_marginLR"
            android:paddingRight="@dimen/project_detail_marginLR"
            android:paddingStart="@dimen/project_detail_marginLR"
            android:paddingTop="@dimen/project_detail_marginTB">

            <TextView
                android:id="@+id/tv_organization_detailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="岗位详情"
                android:textColor="@color/colorRed"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_more"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>

        <TextView
            android:id="@+id/tv_organization_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfdfe"
            android:paddingBottom="@dimen/project_detail_marginTB"
            android:paddingEnd="@dimen/project_detail_marginLR"
            android:paddingLeft="@dimen/project_detail_marginLR"
            android:paddingRight="@dimen/project_detail_marginLR"
            android:paddingStart="@dimen/project_detail_marginLR"
            android:paddingTop="@dimen/project_detail_marginTB"
            android:text="岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n岗位详情\n"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33000000"/>
    </LinearLayout>
</ScrollView>