<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/myProject_item_height"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_myProject_item"
            android:layout_width="@dimen/imageview_myproject_item_width"
            android:layout_height="@dimen/imageview_myproject_item_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/imageview_myproject_margin"
            android:src="@color/colorCyan"/>

        <LinearLayout
            android:layout_width="@dimen/textview_myproject_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/imageview_myproject_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_myProject_projectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorCyan"
                android:textSize="@dimen/textview_myproject_textsize"/>

            <TextView
                android:id="@+id/tv_myProject_projectTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textview_myproject_time_textsize"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_myProject_state"
            android:layout_width="@dimen/textview_myproject_state_heigth"
            android:layout_height="@dimen/textview_myproject_state_width"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/imageview_myproject_margin"
            android:background="@color/colorCyan"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/textview_myproject_textsize"/>
    </LinearLayout>
</LinearLayout>